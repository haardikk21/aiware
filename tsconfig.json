{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2021"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/dist/**/*",
    "**/__tests__/**/*",
    "**/__mocks__/**/*"
  ]
}
